<div local-class="history-manager">
  {{ui-slider
    local-class='slider'
    max=canvas.version
    min=0
    onChange=(action 'onVersionChange')
    value=initialVersion}}

  <button onclick={{action 'clone'}} local-class='clone'>
    {{svg-jar 'Copy' height=24 width=24 local-class='clone-icon'}}
  </button>
</div>

<div local-class="editor">
  {{canvas-editor-next
    editingEnabled=false
    unfurlBlock=(action 'unfurlBlock')
    canvas=canvas
    canvasLinkComponent=(component 'canvas-link')
    githubAuthComponent=(component 'github-oauth')}}
</div>
